        returns     "TextAreaBuilder<HTMLTextAreaElement>"
        description "The maximum number of characters (UTF-16 code units) required that the user should enter"
        usage       "new TextAreaBuilder().maxLength(250);"
    }

    import "templates/subclass_methods" {
        name        "minLength"
        args        ""
        returns     "TextAreaBuilder<HTMLTextAreaElement>"
